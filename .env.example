# Ultraviolet Proxy 環境変数設定

# ===========================================
# サーバー基本設定
# ===========================================

# サーバーポート (デフォルト: 3000)
PORT=3000

# 実行環境 (development, production, test)
NODE_ENV=production

# サーバーホスト (通常は変更不要)
HOST=0.0.0.0

# ===========================================
# セキュリティ設定
# ===========================================

# レート制限 - ウィンドウ時間（ミリ秒、デフォルト: 15分）
RATE_LIMIT_WINDOW=900000

# レート制限 - 最大リクエスト数
RATE_LIMIT_MAX=1000

# CORS設定 (カンマ区切りで複数ドメイン可)
CORS_ORIGINS=*

# セッション秘密キー (ランダムな文字列を設定してください)
SESSION_SECRET=your-super-secret-session-key-change-this

# ===========================================
# プロキシ設定
# ===========================================

# Ultraviolet サービスプレフィックス
UV_PREFIX=/service/

# Bare サーバープレフィックス
BARE_PREFIX=/bare/

# プロキシタイムアウト（ミリ秒）
PROXY_TIMEOUT=30000

# 最大ファイルサイズ（バイト、デフォルト: 100MB）
MAX_FILE_SIZE=104857600

# ===========================================
# ログ設定
# ===========================================

# ログレベル (error, warn, info, debug)
LOG_LEVEL=info

# ログファイルパス
LOG_FILE=./logs/app.log

# エラーログファイルパス
ERROR_LOG_FILE=./logs/error.log

# アクセスログの有効化 (true/false)
ACCESS_LOG_ENABLED=true

# アクセスログファイルパス
ACCESS_LOG_FILE=./logs/access.log

# ===========================================
# データベース設定 (将来の拡張用)
# ===========================================

# SQLite データベースファイル
DATABASE_FILE=./data/ultraviolet.db

# Redis URL (セッション・キャッシュ用、オプション)
# REDIS_URL=redis://localhost:6379

# ===========================================
# 機能設定
# ===========================================

# 広告ブロック機能の有効化 (true/false)
ADBLOCK_ENABLED=true

# セキュリティ機能の有効化 (true/false)
SECURITY_ENABLED=true

# ユーザーエージェント変更機能の有効化 (true/false)
USERAGENT_ENABLED=true

# JavaScript制御機能の有効化 (true/false)
JAVASCRIPT_CONTROL_ENABLED=true

# ===========================================
# 外部サービス設定
# ===========================================

# CDN URL (静的ファイル用、オプション)
# CDN_URL=https://cdn.yourdomain.com

# メトリクス収集の有効化 (true/false)
METRICS_ENABLED=false

# メトリクス収集ポート
METRICS_PORT=9090

# ===========================================
# SSL/TLS設定
# ===========================================

# HTTPS有効化 (true/false)
HTTPS_ENABLED=false

# SSL証明書ファイルパス
# SSL_CERT_PATH=/path/to/cert.pem

# SSL秘密キーファイルパス
# SSL_KEY_PATH=/path/to/key.pem

# ===========================================
# 開発・デバッグ設定
# ===========================================

# デバッグモード (true/false)
DEBUG_MODE=false

# 詳細ログ出力 (true/false)
VERBOSE_LOGGING=false

# パフォーマンス測定 (true/false)
PERFORMANCE_MONITORING=false

# ===========================================
# 通知設定 (将来の拡張用)
# ===========================================

# Discord Webhook URL (エラー通知用、オプション)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Slack Webhook URL (エラー通知用、オプション)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# ===========================================
# バックアップ設定 (将来の拡張用)
# ===========================================

# 自動バックアップの有効化 (true/false)
AUTO_BACKUP_ENABLED=false

# バックアップ間隔（時間）
BACKUP_INTERVAL_HOURS=24

# バックアップ保存先
BACKUP_PATH=./backups

# ===========================================
# キャッシュ設定
# ===========================================

# キャッシュの有効化 (true/false)
CACHE_ENABLED=true

# キャッシュ保存期間（秒）
CACHE_TTL=3600

# メモリキャッシュの最大エントリー数
CACHE_MAX_ENTRIES=10000

# ===========================================
# プロキシプロバイダー設定 (将来の拡張用)
# ===========================================

# 上流プロキシの使用 (true/false)
UPSTREAM_PROXY_ENABLED=false

# 上流プロキシURL
# UPSTREAM_PROXY_URL=http://proxy.example.com:8080

# 上流プロキシ認証 (username:password)
# UPSTREAM_PROXY_AUTH=username:password

# ===========================================
# 地域・言語設定
# ===========================================

# デフォルト言語
DEFAULT_LANGUAGE=ja

# デフォルトタイムゾーン
DEFAULT_TIMEZONE=Asia/Tokyo

# 地域制限の有効化 (true/false)
GEO_RESTRICTION_ENABLED=false

# 許可する国コード (カンマ区切り、例: JP,US,GB)
# ALLOWED_COUNTRIES=JP,US,GB

# ===========================================
# API設定
# ===========================================

# API有効化 (true/false)
API_ENABLED=true

# API レート制限
API_RATE_LIMIT=100

# API認証の有効化 (true/false)
API_AUTH_ENABLED=false

# APIキー (API認証が有効な場合)
# API_KEY=your-api-key-here

# ===========================================
# 監視・ヘルスチェック設定
# ===========================================

# ヘルスチェックの有効化 (true/false)
HEALTH_CHECK_ENABLED=true

# ヘルスチェック間隔（秒）
HEALTH_CHECK_INTERVAL=30

# 外部監視サービスURL (オプション)
# EXTERNAL_MONITOR_URL=https://monitor.yourdomain.com/webhook

# ===========================================
# 実験的機能
# ===========================================

# WebRTC リーク防止 (true/false)
WEBRTC_LEAK_PROTECTION=true

# DNS over HTTPS (true/false)
DOH_ENABLED=false

# DNS over HTTPS プロバイダー
DOH_PROVIDER=cloudflare

# IPv6サポート (true/false)
IPV6_ENABLED=true

# HTTP/2サポート (true/false)
HTTP2_ENABLED=true

# ===========================================
# カスタム設定
# ===========================================

# カスタム設定1 (自由に使用)
# CUSTOM_SETTING_1=value1

# カスタム設定2 (自由に使用)
# CUSTOM_SETTING_2=value2

# ===========================================
# 設定例コメント
# ===========================================

# 本番環境設定例:
# NODE_ENV=production
# LOG_LEVEL=warn
# RATE_LIMIT_MAX=500
# HTTPS_ENABLED=true

# 開発環境設定例:
# NODE_ENV=development
# LOG_LEVEL=debug
# DEBUG_MODE=true
# VERBOSE_LOGGING=true

# セキュリティ強化例:
# RATE_LIMIT_MAX=100
# API_AUTH_ENABLED=true
# GEO_RESTRICTION_ENABLED=true
# SECURITY_ENABLED=true